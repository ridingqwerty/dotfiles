!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              false
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            1
URxvt.intensityStyles:      false

! Fonts
URxvt.allow_bold:           false
/* URxvt.font:                 -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1 */
URxvt*font: xft:FiraCode:pixelsize=12,xft:Symbola:pixelsize=12
URxvt*boldFont: xft:FiraCode:Bold:pixelsize=12

! Fix font space
URxvt*letterSpace: 0

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher,resize-font
URxvt.matcher.button:       1
URxvt.urlLauncher:          firefox

! Font size bind
URxvt.keysym.C-M-j:          resize-font:smaller
URxvt.keysym.C-M-k:          resize-font:bigger
URxvt.keysym.C-M-l:          resize-font:reset
!URxvt.keysym.C-k: command:\033]720;1\007
!URxvt.keysym.C-j: command:\033]721;1\007  
! https://askubuntu.com/questions/831971/what-type-of-sequences-are-escape-sequences-starting-with-033/831973
!URxvt.keysym.C-k: command:\033]<10>A

! Home/End keys
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~
URxvt.keysym.KP_Home: \033[1~
URxvt.keysym.KP_End: \033[4~

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Adjust transparency (wip)
URxvt.keysym.C-M-q: command:\033]11;[55]#002b36\007
URxvt.keysym.C-M-w: command:\033]11;[65]#002b36\007
URxvt.keysym.C-M-e: command:\033]11;[75]#002b36\007
URxvt.keysym.C-M-r: command:\033]11;[85]#002b36\007
URxvt.keysym.C-M-t: command:\033]11;[95]#002b36\007
URxvt.keysym.C-M-y: command:\033]11;[15]#002b36\007
! Swap light/dark colors (wip)
!URxvt.keysym.C-M-i: command:\033]10;#657b83\007\033]11;[95]#002b36\007
!URxvt.keysym.C-M-o: command:\033]11;[95]#fdf6e3\007\033]10;#002b36\007

!#?
!URxvt.keysym.C-M-i: command:\033]12;#abcdef\007
!URxvt.keysym.C-M-o: command:\033]13;#123456\007
!
!# Manipulate special colors.
!# 10 = foreground, 11 = background, 12 = cursor foregound
!# 13 = mouse foreground, 708 = terminal border background
!# \033]{index};{color}\007
!
!URxvt.keysym.M-minus: command:\033]710;xft:Tamzen:pixelsize=14\007
!printf '\e]710;%s\007' "xft:Terminus:pixelsize=12"
!


!*foreground: #657b83
!
! Pointer
URxvt.pointerBlank:         true

!!Source http://github.com/altercation/solarized

*background: [95]#002b36
*foreground: #657b83
!!*fading: 40
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! black dark/light
*color0: #073642
*color8: #002b36

!! red dark/light
*color1: #dc322f
*color9: #cb4b16

!! green dark/light
